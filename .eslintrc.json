{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {

    },
    "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "no-unused-expressions": "off",
        "camelcase": "off",
        "no-tabs": "off",
        "max-len": "off"
      }
    }
  ]
}